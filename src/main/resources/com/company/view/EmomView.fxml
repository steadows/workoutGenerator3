<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.company.controller.EmomController"
            styleClass="view-container">

    <!-- Top: Title and Back Button -->
    <top>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20"/>
            </padding>
            
            <HBox alignment="CENTER_LEFT">
                <Button text="â† Back"
                        onAction="#handleBackClick"
                        styleClass="action-button, back-button"/>
            </HBox>
            
            <VBox alignment="CENTER" spacing="10">
                <Label text="EMOM Workout" styleClass="title-label"/>
                <Label text="Every Minute On the Minute - 5 Exercises" styleClass="subtitle-label"/>
            </VBox>
        </VBox>
    </top>

    <!-- Center: Workout Display -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20"/>
            </padding>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button text="Generate Workout"
                        fx:id="generateButton"
                        onAction="#handleGenerateClick"
                        styleClass="action-button, generate-button"
                        prefWidth="200"
                        prefHeight="50"/>
                <Button text="New Workout"
                        fx:id="newWorkoutButton"
                        onAction="#handleGenerateClick"
                        styleClass="action-button, emom-button"
                        prefWidth="150"
                        prefHeight="50"
                        visible="false"
                        managed="false"/>
            </HBox>

            <!-- Exercises Display Area -->
            <ScrollPane fx:id="workoutScrollPane"
                        fitToWidth="true"
                        styleClass="scroll-pane"
                        visible="false"
                        managed="false"
                        VBox.vgrow="ALWAYS">
                <VBox fx:id="exerciseContainer"
                      spacing="15"
                      alignment="TOP_CENTER">
                    <padding>
                        <Insets top="10" right="20" bottom="20" left="20"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
